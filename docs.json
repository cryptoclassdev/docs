{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Validator.com",
  "colors": {
    "primary": "#9945FF",
    "light": "#B794F6",
    "dark": "#7C3AED"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index", "quickstart", "validator-overview"]
          },
          {
            "group": "Validator Setup",
            "pages": [
              "setup/requirements",
              "setup/installation",
              "setup/configuration"
            ]
          },
          {
            "group": "Staking & Delegation",
            "pages": [
              "staking/introduction",
              "staking/delegate-tokens",
              "staking/rewards"
            ]
          },
          {
            "group": "Monitoring & Performance",
            "pages": [
              "monitoring/dashboard",
              "monitoring/metrics",
              "monitoring/alerts"
            ]
          },
          {
            "group": "Solana",
            "pages": [
              "solana/introduction",
              "solana/defi",
              "solana/wallet"
            ]
          },
          {
            "group": "Troubleshooting",
            "pages": ["troubleshooting/common-issues", "troubleshooting/faq"]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Validator API",
            "pages": [
              "api-reference/introduction",
              "api-reference/validator-status",
              "api-reference/staking-info",
              "api-reference/rewards-history"
            ]
          },
          {
            "group": "Monitoring API",
            "pages": [
              "api-reference/monitoring/metrics",
              "api-reference/monitoring/alerts",
              "api-reference/monitoring/performance"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@validator.com"
      },
      {
        "label": "Discord",
        "href": "https://discord.gg/validator"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Stake Now",
      "href": "https://validator.com/stake"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/validatorcom",
      "github": "https://github.com/validator-com",
      "discord": "https://discord.gg/validator"
    }
  }
}
